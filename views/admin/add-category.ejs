<% layout ('layout') -%>

<div class="row">	
	<div class="col-lg-6 col-md-offset-3">
               <% if(message.length > 0){ %>
             <div class="alert alert-success alert-dismissible">
                    <button class="close" data-dismiss="alert" role="button">
                          <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <%- message %>
             </div>

               	<% } %>
	   
		<form method="post">
		<h1>Add a New Product Category</h1>
		<div class="input-group input-group-lg signup-form">
		 <span class="input-group-addon">Category Title</span>
			<input type="text" class="form-control" name="name">
            </div>
            	<button type="submit" class="btn btn-success btn-lg" >Add Category</button>
		</form>

	</div>
</div>