<% layout('layout') %>
<div class="jumbotron" id="jumbotron-margin-top">
	<div class="container">
		<h1> Shop Smart, Save Big</h1>
		<p>Find Your Favorite Product</p>
		<p><a class="btn btn-primary btn-lg" href="#" role="button">Sign Up &raquo;</a></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="input-group col-md-12">
					<input class="form-control input-lg" id="insta_search" type="text" placeholder="Find your Dil ki Deal" name="search_string"></input>
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row" id="searchResults">
	<% for(var i=0;i<products.length;i++){ %>
		<div class="col-md-4">
          <a href="/product/<%= products[i]._id %>">
              <div class="thumbnail">
                 <img src="<%= products[i].image %>">
                 <div class="caption">
                   <h3><%= products[i].name %></h3>
                   <p><%= products[i].category.name %></p>
                   <p>$<%= products[i].price %></p>
                 </div>
              </div>
          </a>
		</div>
	<% } %>	
      <ul class="pagination text-center">
          <li>
          <% for(var i=1;i<=pages;i++){ if(i==1){%>
           <li> <a href="/"><%= i %></a> </li>
            <% } else {%>
             <li><a href="/page/<%= i %>"><%= i %></a></li>
            	<% } %>
          <% } %>	
          </li>
      </ul>
    </div>
</div>